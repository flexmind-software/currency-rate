{
    "name": "flexmind-software/currency-rate",
    "version": "0.1.1",
    "description": "Library download currency rate and save in database, It's designed to be extended by any available data source.",
    "keywords": [
        "flexmind",
        "laravel",
        "packages",
        "php",
        "mysql",
        "postgresql",
        "mongo",
        "currency-converter",
        "currency-exchange",
        "currency rate",
        "currency rates",
        "foreign exchange rates"
    ],
    "homepage": "https://github.com/flexmind-software/currency-rate",
    "license": "MIT",
    "authors": [
        {
            "name": "Krzysztof Bielecki",
            "email": "krzysztof@flexmind.pl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.7",
        "shuchkin/simplexlsx": "^0.8.27",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/contracts": "^8.37",
        "illuminate/support": "^8.37",
        "ext-simplexml": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-soap": "*"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "FlexMindSoftware\\CurrencyRate\\": "src",
            "FlexMindSoftware\\CurrencyRate\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FlexMindSoftware\\CurrencyRate\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "FlexMindSoftware\\CurrencyRate\\CurrencyRateServiceProvider"
            ],
            "aliases": {
                "CurrencyRate": "FlexMindSoftware\\CurrencyRate\\CurrencyRateFacade"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
